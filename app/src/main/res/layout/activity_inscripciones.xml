
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".inscripciones">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_marginTop="0dp">

        <!-- Row for Title and Menu -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">

            <TextView
                android:id="@+id/tvTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="Circuito Futuro"
                android:textColor="#000000"
                android:layout_marginRight="50dp"
                android:textSize="24sp"

                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Menu ▼"
                android:layout_marginLeft="140dp"
                android:textColor="#000000"
                android:textSize="18sp" />
        </LinearLayout>

        <!-- Main Title -->
        <TextView
            android:id="@+id/tvMainTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="INSCRIBETE"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_gravity="center"
            android:paddingBottom="8dp" />

        <!-- Description -->
        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Realiza tu proceso de inscripción a la QUINTA PARADA a celebrarse el 2 Y 3 de Noviembre"
            android:textSize="16sp"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:paddingBottom="16dp" />

        <!-- Button -->
        <Button
            android:id="@+id/btnInscribirse"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="INSCRIBIRSE"
            android:backgroundTint="#3A3A3A"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:padding="12dp"
            android:elevation="4dp"
            android:layout_marginBottom="24dp"/>

        <!-- Card View with game format details -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="10dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvFormatTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Formato de juego"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:paddingBottom="8dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#888888" />

                <TextView
                    android:id="@+id/tvFormatDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="• Cuadros de 3 ó 4 deportistas, 2 clasificados a cuadro principal\n  • Cuadro de eliminación directa para A y B\n • Cuadro de eliminación directa para Dobles (Participan deportistas que no estén en semifinales)\n • Se juega hasta obtener campeones, subcampeones, terceros y cuartos\n • Trofeos, medallas he implementos deportivos\n  • Refrigerio Para todos los deportistas el primer día del evento\n  • Almuerzo para los entrenadores de las delegaciones el primer día del evento\n  • Rifas entre todos los asistentes (Familiares de los deportistas)"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:lineSpacingExtra="4dp"
                    android:paddingTop="8dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
