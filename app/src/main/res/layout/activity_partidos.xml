<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9F9"
    tools:context=".Partidos">


    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Circuito Futuro"
        android:textColor="#000000"
        android:textSize="24sp"

        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="32dp" />

    <TextView
        android:id="@+id/tvMenu"
        android:layout_width="75dp"
        android:layout_height="26dp"
        android:text="Menu ▼"
        android:textColor="#000000"
        android:textSize="18sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="336dp"
        tools:layout_editor_absoluteY="38dp" />

    <TextView
        android:id="@+id/title_partidos_jugados"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Partidos jugados"
        android:background="#2E3A59"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tvTitulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:padding="8dp" />

    <!-- Tarjeta: Partidos jugados -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_partidos_jugados"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/title_partidos_jugados"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView


                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mariana Delgado          63-63"
                android:textSize="14sp"
                android:textColor="#000000" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Analucia Ramirez         57-63-61"
                android:layout_marginTop="8dp"
                android:textSize="14sp"
                android:textColor="#000000" />

            <Button
                android:id="@+id/btMarcador"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:backgroundTint="#2E3A59"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:text="Ingresar marcador"
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Subtítulo: Partidos por jugar -->
    <TextView
        android:id="@+id/title_partidos_por_jugar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Partidos por jugar"
        android:background="#2E3A59"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/card_partidos_jugados"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:padding="8dp" />

    <!-- Tarjeta: Partidos por jugar -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_partidos_por_jugar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/title_partidos_por_jugar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Victoria Ramirez        No antes de las 3:00pm"
                android:textColor="#000000"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Luciana Diaz           No antes de las 5:00pm"
                android:textColor="#000000"
                android:textSize="14sp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
